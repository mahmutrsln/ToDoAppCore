@model List<GorevListAllDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover table-sm mt-2">
        <tr>
            <th>Ad</th>

            <th>Oluşturulma Tarihi</th>
            <th>Çalışan Personel</th>
            <th>Aciliyet</th>
            <th>Rapor Sayısı</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>

                <td>@item.OlusturulmaTarih.ToString("D")</td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <span class="badge badge-danger">Çalışan Personel Yok</span>
                        }
                        else
                        {
                            <span class="badge badge-success">@item.AppUser.Name çalışıyor  </span>
                        }
                    }
                </td>
                <td>
                    @item.Aciliyet.Tanım
                </td>
                <td>@item.Rapors.Count</td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <a asp-action="AtaPersonel" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="fas fa-caret-right mr-2"></i>Personel Ata</a>
                        }
                        else
                        {
                            <a asp-action="Detaylandir" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="fas fa-info-circle mr-2"></i>Detay</a>
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="my-2 text-center lead">Herhangi bir görev bulunmamaktadır.</div>
}

