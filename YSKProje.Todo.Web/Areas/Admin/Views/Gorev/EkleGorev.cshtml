@model GorevAddDto
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" asp-action="EkleGorev" method="post">
    <div class="form-group">
        <label>Görev Ad</label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input class="form-control" type="text" asp-for="Ad" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea class="form-control" asp-for="Aciklama"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz</label>
        <span class="text-danger" asp-validation-for="AciliyetId"></span>
        <select asp-for="AciliyetId" class="form-control" asp-items="@ViewBag.Aciliyetler">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}