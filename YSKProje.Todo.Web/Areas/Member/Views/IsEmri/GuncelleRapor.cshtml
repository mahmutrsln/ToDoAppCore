@model RaporUpdateDto
@{
    ViewData["Title"] = "GuncelleRapor";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="card text-white bg-primary my-3">
    <div class="card-header">Görevin Adı :@Model.Gorev.Ad</div>
    <div class="card-body">
        <h4 class="card-title">Görevin Aciliyet Durumu : @Model.Gorev.Aciliyet.Tanım</h4>
        <p class="card-text">Görevin Açıklaması : @Model.Gorev.Aciklama</p>
    </div>
</div>

<form method="post" asp-action="GuncelleRapor" class="p-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Tanim"></label>
        <span asp-validation-for="Tanim" class="text-danger"></span>
        <input asp-for="Tanim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Detay"></label>
        <span asp-validation-for="Detay" class="text-danger"></span>
        <textarea asp-for="Detay" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm"><i class="fas fa-chevron-circle-left mr-2"></i>Vazgeç</a>
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

