@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-dismissible alert-primary fade show">
        @TempData["message"].ToString()
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

<form class="w-75 mx-auto p-3" enctype="multipart/form-data" asp-action="Index" method="post">
    <input type="hidden" asp-for="Id " />
    <div class="form-group">
        <label asp-for="Name">Ad : </label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SurName">Soyad : </label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email : </label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <h5 class="text-center">Şu an ki resminiz : </h5>
                <img src="~/img/@Model.Picture" class="w-100" style="height:10rem !important;" alt="@Model.Name" />
            </div>
            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none;">
                    <h5 class="text-center">Seçtiğiniz resim : </h5>
                    <img class="w-100" style="height:10rem !important;" id="rsmOnizleme" />
                </div>
            </div>
            <div class="col-md-2"></div>

            <div class="col-md-12">
                <label>Resim Seç</label>
                <input type="file" class="form-control-file" name="Resim" id="resim" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-info btn-sm mt-2">
        <i class="fas fa-check mr-2"></i>
        Kaydet
    </button>



</form>


@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {

            $("#resim").change(function (e) {

                let files = e.target.files;

                $("#alanOnizleme").show();
                $("#rsmOnizleme").attr("src", URL.createObjectURL(files[0]));

            });

        });
    </script>
}

