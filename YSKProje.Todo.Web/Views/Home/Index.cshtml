@model AppUserSignInDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form class="w-50 shadow mx-auto p-4 mt-5" style="align-items:center;" asp-action="GirisYap" method="post">
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Parola :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla : </label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-sm btn-info">Giriş Yap</button>
    <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
</form>
